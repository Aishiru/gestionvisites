{% extends 'base.html.twig' %}


{% block body %}
<div class="container corp">

<div class="columns">
  <div class="column is-2">
  </div>
  <div class="column">
    <div class="box">
<h1 class="my-4 title is-3 has-text-centered">Connexion</h1>
{% if error %}
 <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="field">
<form action="{{ path('login') }}" method="post">
<label for="Identifiant">Identifiant</label>
  <p class="control has-icons-left has-icons-right">
  <input class="input" type="mytext" id="username" name="_username" value="{{ last_username }}" placeholder="Identifiant">
    <span class="icon is-small is-left">
      <i class="fas fa-user-alt"></i>
    </span>
    <span class="icon is-small is-right">
      <i class="fas fa-check"></i>
    </span>
  </p>
</div>
<div class="field">
<label for="password">Mot de Passe</label>
  <p class="control has-icons-left">
  
    <input class="input" type="password" id="password" name="_password" placeholder="Password">
    <span class="icon is-small is-left">
      <i class="fas fa-lock"></i>
    </span>
  </p>
</div>
<input type="hidden" name="_target_path" value="{{ path('home') }}">
<div class="field">
  <p class="control">
    <button class="button is-success">
      Login
    </button>
  </p>
  </form>
</div>
</div>
</div>
  </div>
  <div class="column is-2">
  </div>
</div>


{% endblock %}
