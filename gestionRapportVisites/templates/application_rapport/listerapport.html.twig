{% extends 'base.html.twig' %}

{% block title %}Liste rapports{% endblock %}

{% block body %}
    <div class="container corp">


        <div class="columns">
        <div class="column is-1">
        </div>
        <div class="column">
        <h1 class="title is-3 has-text-white">Liste des rapports de visite</h1>
        <h1 class="subtitle is-5 has-text-white">----------------------------</h1>
        <a class="button is-primary">
            
                            <span class="icon">
                                <i class="fas fa-plus"></i>
                            </span>
                            <span>
                                Ajouter un rapport
                            </span>
        </a>
        </div>
        <div class="column is-1">
        </div>
        </div>

        {% for rapport in rapports %}

                <div class="columns">
                <div class="column is-1">
                </div>
                <div class="column">
        <div class="box">
            <article class="media">



                <div class="media-content">
                    <div class="content">
                        <p>
                            <strong>{{ rapport.rapMotif }}</strong>
                            <br>
                            {{ rapport.rapBilan }}
                        </p>
                    </div>
                    <nav class="level is-mobile">
                        <div class="level-left">
                            <a class="level-item" aria-label="modifier">
                                <span class="icon is-small">
                                    <i class="fas fa-wrench"></i>
                                </span>
                            </a>
                            <a class="level-item" aria-label="suprimer">
                                <span class="icon is-small">
                                    <i class="fas fa-times"></i>
                                </span>
                            </a>
                        </div>
                    </nav>
                </div>
            </article>
        </div>
                </div>
                <div class="column is-1">
                </div>
                </div>
                <br>

        {% endfor %}

    </div>
{% endblock %}