{% extends 'base.html.twig' %}

{% block title %}Activité{% endblock %}

{% block body %}
<div class="fondgris">
    <div class="container corp">
        <div class="columns">
            <div class="column is-1">
            </div>
            <div class="column">
                <a href="">
                    <h1 class="title is-3 has-text-white">Activité n° {{ activite.id }}</h1>
                </a>
                <h1 class="subtitle is-5 has-text-white">----------------------------</h1>
            </div>
            <div class="column is-1">
            </div>
        </div>

        <!-- AFFICHAGE ACTIVITE -->

        <div class="columns">
            <div class="column is-1">
            </div>
            <div class="column">
                <div class="box">
                    <article class="media">
                        <div class="media-content">
                            <div class="content">
                                <p>
                                    Date : {{ activite.date | date("d/m/Y")}}
                                    <br>
                                    Lieu : {{ activite.lieu }}
                                    <br>
                                    Theme : {{ activite.theme }}
                                </p>
                            </div>
                            <nav class="level is-mobile">
                                <div class="level-left">
                                    <a href="{{ path("modifierActivite", {"id" : activite.id }) }}" class="level-item"
                                        aria-label="Modifier">
                                        <span class="icon is-small">
                                            <i class="fas fa-wrench"></i>
                                        </span>
                                    </a>
                                    <a href="{{ path("supprimerActivite", {"id" : activite.id }) }}" class="level-item"
                                        aria-label="Suprimer" onclick="return confirm('Êtes-vous sûr ?')">
                                        <span class="icon is-small">
                                            <i class="fas fa-times"></i>
                                        </span>
                                    </a>
                                </div>
                            </nav>
                        </div>
                    </article>
                </div>
            </div>
            <div class="column is-1">
            </div>
        </div>

        <!-- AFFICHAGE INVITATION -->

        <div class="columns">
            <div class="column is-1">
            </div>
            <div class="column">
                <a href="">
                    <h1 class="title is-3 has-text-white">Invités</h1>
                </a>
                <h1 class="subtitle is-5 has-text-white">----------------------------</h1>
            </div>
            <div class="column is-1">
            </div>
        </div>

        <div class="columns">
            <div class="column is-1">
            </div>
            <div class="column is-3">
                <a href="{{ path("inviterPraticien", { "id" : activite.id }) }}" class="button is-primary"><span class="icon"><i
                            class="fas fa-plus"></i></span><span>Inviter un praticien</span></a>
            </div>
        </div>

        {% for invite in invitation %}
        <div class="columns">
            <div class="column is-1">
            </div>
            <div class="column">
                <div class="box">
                    <article class="media">
                        <div class="media-content">
                            <div class="content">
                                <p>
                                    Praticien : {{ invite.praticien.praNom }} {{ invite.praticien.praPrenom }}
                                    <br>
                                    Spécialité : {{ invite.specialisation }}
                                </p>
                            </div>
                            <nav class="level is-mobile">
                                <div class="level-left">
                                    <a href="{{ path("removeInviter", {"id" : invite.id }) }}" class="level-item"
                                        aria-label="Supprimer" onclick="return confirm('Êtes-vous sûr ?')">
                                        <span class="icon is-small">
                                            <i class="fas fa-times"></i>
                                        </span>
                                    </a>
                                </div>
                            </nav>
                        </div>
                    </article>
                </div>
            </div>
            <div class="column is-1">
            </div>
        </div>
        <br>
        {% endfor %}

        <!-- AFFICHAGE ORGANISATEUR -->

        <div class="columns">
            <div class="column is-1">
            </div>
            <div class="column">
                <a href="">
                    <h1 class="title is-3 has-text-white">Organisateur(s)</h1>
                </a>
                <h1 class="subtitle is-5 has-text-white">----------------------------</h1>
            </div>
            <div class="column is-1">
            </div>
        </div>

        <div class="columns">
            <div class="column is-1">
            </div>
            <div class="column is-3">
                <a href="{{ path("ajouterVisiteur", { "id" : activite.id }) }}" class="button is-primary"><span class="icon"><i
                            class="fas fa-plus"></i></span><span>Ajouter un organisateur</span></a>
            </div>
        </div>

        {% for visiteur in visiteurs %}
        <div class="columns">
            <div class="column is-1">
            </div>
            <div class="column">
                <div class="box">
                    <article class="media">
                        <div class="media-content">
                            <div class="content">
                                <p>
                                    {{ visiteur.visNom}} {{ visiteur.visPrenom }}
                                </p>
                            </div>
                            <nav class="level is-mobile">
                                <div class="level-left">
                                    <a href="{{ path("removeOrganisateur", {"idOrganisateur" : visiteur.id, "idActivite" : activite.id }) }}"
                                        class="level-item" aria-label="Supprimer" onclick="return confirm('Êtes-vous sûr ?')">
                                        <span class="icon is-small">
                                            <i class="fas fa-times"></i>
                                        </span>
                                    </a>
                                </div>
                            </nav>
                        </div>
                    </article>
                </div>
            </div>
            <div class="column is-1">
            </div>
        </div>
        <br>
        {% endfor %}

    </div>
</div>

{% endblock %}